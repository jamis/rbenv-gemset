#!/usr/bin/env bash
set -e

RBENV_GEMSET="$1"
RBENV_GEMSET=${RBENV_GEMSET:=$(basename $PWD)}

if [[ -f .rbenv-gemsets ]]
then
  {
    echo ".rbenv-gemsets already present"
  } >&2
  exit 1
else
  rbenv gemset create "$(rbenv version-name)" $RBENV_GEMSET
  echo $RBENV_GEMSET > .rbenv-gemsets
  echo created .rbenv-gemsets
fi
